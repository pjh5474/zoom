doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css@1.12/mvp.css")
    body 
        header 
            h1 Noom
        main
            div#welcomeDiv
                form#roomForm
                    input#roomInput(placeholder="room name", required, type="text")
                    input#nicknameInput(placeholder="nickname", type="text")
                    button Enter Room

                h4 Open Rooms:
                    ul#roomsList
                
            div#roomDiv
                h3
                ul
                form#msgForm
                    input(placeholder="message", required, type="text")
                    button Send


        script(src="/socket.io/socket.io.js")
        script(src="public/js/app.js")